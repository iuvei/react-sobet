.lottery-wrapper {
    min-height: 800px;
    background: #242d47;
    padding-top: 36px;
    font-family: "Microsoft Yahei",Arial,Helvetica,sans-serif;
}

.lottery-inner-wrapper {
    width: 1100px;
    margin: 0 auto;
    background-color: #fff;

    .main-content {
        overflow: hidden;
    }

    .main-content-left {
        width: 800px;
        border-right: 6px solid #eee;
        .lottery-plate-wrapper {
            border-right: 1px solid #e0e6ed;
        }
    }

}