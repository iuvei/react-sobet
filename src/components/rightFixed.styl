.right-fixed {
  position: fixed;
  top: 50%;
  right: 80px;
  width: 60px;
  height: 405px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  z-index: 99999;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  /* display: none */
}

.right-fixed a {
  text-decoration: none
}

.right-fixed .day-sign {
  width: 60px;
  height: 70px;
  background: url(../images/foot/day_sign.png) center center no-repeat;
  background-size: cover;
  margin-bottom: 5px;
  display: none
}

.right-fixed .day-sign>a {
  width: 100%;
  height: 100%;
  display: block
}

.right-fixed .group-btn {
  width: 60px;
  margin-bottom: 1px;
  background-color: #3a3a3a;
  border-radius: 10px;
  overflow: hidden
}

.right-fixed .chat-msg,.right-fixed .customer-service,.right-fixed .help-link,.right-fixed .line-switch {
  width: 60px;
  height: 70px;
  padding-top: 13px;
  text-align: center;
  border-bottom: 1px solid #282828
}

.right-fixed .help-link {
  border-bottom: none
}


.right-fixed .back-to-top:hover,.right-fixed .chat-msg:hover,.right-fixed .customer-service:hover,.right-fixed .help-link:hover,.right-fixed .line-switch:hover {
  background: rgba(30,30,30,.95)
}

.right-fixed .chat-msg .chat-msg-icon,.right-fixed .customer-service .customer-service-icon,.right-fixed .help-link .help-link-icon,.right-fixed .line-switch .line-switch-icon {
  position: relative;
  display: inline-block;
  background-image: url(../images/all-icon.png);
  background-repeat: no-repeat
}

.right-fixed .chat-msg .chat-msg-icon {
  width: 28px;
  height: 26px;
  background-position: 0 -241px
}

.right-fixed .customer-service .customer-service-icon {
  width: 29px;
  height: 26px;
  background-position: -38px -241px
}

.right-fixed .line-switch .line-switch-icon {
  width: 28px;
  height: 26px;
  background-position: -76px -241px
}

.right-fixed .help-link .help-link-icon {
  width: 28px;
  height: 28px;
  background-position: -114px -240px
}

.right-fixed .chat-msg .chat-msg-icon .chat-tip-dot {
  position: absolute;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #f05e4b;
  border: 1px solid #fff;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  right: -5px;
  top: -4px;
  display: none
}

.right-fixed .chat-msg.unread .chat-msg-icon .chat-tip-dot {
  display: block
}

.right-fixed .chat-msg .chat-msg-title,.right-fixed .customer-service .customer-service-title,.right-fixed .help-link .help-link-title,.right-fixed .line-switch .line-switch-title {
  font-size: 12px;
  color: #e8e8e8;
  margin-top: 3px
}
