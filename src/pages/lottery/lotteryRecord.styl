.record-table-wrapper {
    width: 794px;
    .record-title-wrapper {
        position: relative;
        height: 32px;
        line-height: 32px;
        background-color: #f5f5f5;
        border-bottom: 1px solid #e0e6ed;

        .record-title {
            margin: 0 10px;
            color: #333;
            font-size: 14px;
            font-weight: 700;

            .record-title-icon {
                display: inline-block;
                width: 18px;
                height: 18px;
                margin-right: 4px;
                background: url('../../images/lottery/new_lottery_common.png') -10px -123px no-repeat;
                vertical-align: middle;
            }
        }

        .hide-record {
            width: 66px;
            height: 22px;
            line-height: 22px;
            position: absolute;
            right: 25px;
            top: 0;
            background-color: #fff;
            text-align: center;
            border-radius: 0 0 2px 2px;
            cursor: pointer;
            font-size: 12px;
            color: #999;
            box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.2);
        }
    }
}
