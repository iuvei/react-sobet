.slot-top-wrapper {
    background: url('../../images/slot/pt_top_bg.jpg') center 0 no-repeat;

    .slot-top {
        height: 420px;
        width: 1200px;
        position: relative;
        margin: 0 auto;
    }

    .slot-top-side-img {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 111;
    }

    .slot-cards {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
    }

    .slot-pool, .slot-mg, .slot-pt {
        text-align: center;
        height: 350px;
        width: 280px;
        border-radius: 10px;
        overflow: hidden;
        color: #d9d9d9;
        margin-right: 20px;
    }

    .slot-mg {
        margin-right: 140px;
    }

    .slot-pool {
        background-color: #1b1b1b;
    }

    .slot-pool-num {
        font-size: 28px;
        font-weight: 600;
        color: #fdaf24;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        bottom: 15px;
    }

    .slot-pool-wrapper {
        position: relative;
        height: 100%;
        .slot-pool-top {
            height: 260px;
            overflow: hidden;
        }
    }

    .slot-pool-bottom {
        background: url('../../images/slot/slot_pool.png') no-repeat;
        position: absolute;
        bottom: 0;
        height: 109px;
        width: 305px;
        left: 50%;
        transform: translateX(-50%);
    }

    .slot-pt-top {
        height: 260px;
        background: url('../../images/slot/pt_show.jpg') no-repeat;
        position: relative;
        cursor: pointer;
    }

    .slot-play-pt {
        position: absolute;
        bottom: 0;
        background: url('../../images/slot/pt_logo.png') no-repeat;
    }

    .slot-pt-bottom {
        padding: 8px 15px 10px 15px;
        background-color: #1f1f1f;
    }

    .slot-pt-money {
        text-align: left;
        color: #919191;
        font-size: 12px;
    }

    .pt-balance {
        font-size: 18px;
        margin-top: 5px;
    }

    .pt-money-symbol {
        color: #fff;
    }

    .pt-money-count {
        color: #FE6E00;
    }

    .pt-zhuanzhang {
        font-size: 12px;
        padding: 2px 10px;
        color: #fff;
        background: orange;
        border-radius: 10px;
        cursor: pointer;
        position: relative;
        top: 3px;
        margin-right: 12px;
    }

    .pt-bottom {
        position: relative;
        margin-top: 5px;
    }

    .pt-pc-divider {
        position: absolute;
        content: '';
        height: 22px;
        border: 1px solid #333;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
    }

    .pt-pc-download {
        font-size: 12px;
        height: 18px;
        line-height: 18px;
    }

    .pt-pc-download a {
        color: #919191;
    }

    .pt-pc-download::before {
        display: inline-block;
        content: '';
        width: 17px;
        height: 18px;
        margin-right: 6px;
        background: url('../../images/slot/pc_downloader.png') no-repeat;
        vertical-align: middle;
    }

    .pt-app-download {
        color: #919191;
        height: 18px;
        line-height: 18px;
        font-size: 12px;
    }

    .pt-app-download::before {
        display: inline-block;
        content: '';
        width: 17px;
        height: 20px;
        margin-right: 6px;
        background: url('../../images/slot/qrcode-icon.png') no-repeat;
        vertical-align: middle;
    }
}

$main-min-height = 628px;

.slot-bottom-wrapper {
    position: relative;
    background-color: #fff;
    min-height: $main-min-height;

    .slot-bottom-wrapper-img {
        position: absolute;
        top: 0;
        height: $main-min-height;
    }

    .slot-bottom {
        border-radius: 4px;
        background: #f1f1f1;
        width: 1200px;
        min-height: $main-min-height;
        position: relative;
        left: 50%;
        transform: translateX(-50%);
        top: -10px;

        .slot-hot-games {
            margin-top: -10px;
            border-radius: 4px 4px 10px 10px;
            border: 1px solid #d1d1d1;
            box-shadow: 0 1px 7px 0 #8b8b8b;
            padding: 6px 0;
            height: 127px;
            background: #f1f1f1;
        }

        .slot-hot-games-left {
            width: 242px;
            height: 100%;
            border-right: 1px solid #dadada;
            padding: 0 12px;
        }
        .slot-hot-games-left-text {
            margin-top: 18px;
            color: #ac812f;
            font-size: 16px;
            height: 25px;
            line-height: 25px;
            text-align: center;
        }
        .slot-hot-games-center {
            height: 100%;
            width: 867px;
            position: relative;
            border-right: 1px solid #dadada;
        }
        .hot-games-list {
            .game-item {
                float: left;
                width: 122px;
                height: 90px;
                margin-left: 20px;
                margin-bottom: 22px;
                position: relative;
                &:hover {
                    .game-item-bg {
                        background: #000;                    
                        transform: scale(1.1);
                        opacity: .8;
                    }
                    .game-item-hover {
                        opacity: 1;
                    }
                    .game-item-img {
                        opacity: .2;
                    }
                }
            }
            .game-item-bg {
                border-radius: 5px;
                position: absolute;
                width: 100%;
                height: 100%;
                opacity: 0;
                transition: all .3s ease-in-out;
            }
            .game-item-hover,
            .game-item-img {
                position: absolute;
                width: 100%;
                border-radius: 5px;
            }
            .game-item-hover {
                opacity: 0;
                text-align: center;
                .play-game {
                    width: 72px;
                    height: 22px;
                    border-radius: 5px;
                    background: #359C75;
                    margin: 9px auto;
                    cursor: pointer;
                    text-align: center;
                    line-height: 20px;
                    color: #fff;
                    box-shadow: 0 0 5px 0 rgba(0,0,0,.4);
                }
            }
            .game-item-img img {
                border-radius: 5px;
                display: block;
                width: 100%;
                height: 90px;
                &.game-item-img--short {
                    height: 84px;
                }
            }
            .count-up-wrapper {
                display: block;
                text-align: center;
                color: #c86400;
                background: #fff;
            }
        }
        .hot-games-list-mask {
            transition: all .5s ease-in-out;
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 0;
            background: #fff;       
        }
        .hot-games-list-mask.hide {
            height: 100%;
        }
        .slot-hot-games-right {
            text-align: center;
            margin: auto;
            width: 86px;
            margin-top: 20px;
        }
    }
}
