.activity-wrapper {
    background: url('../../images/activity/bg.jpg') top center no-repeat;
    min-height: 800px;

    .activity-main {
        width: 1200px;
        margin: 0 auto;
        padding: 56px 0 28px 0;
    }

    .activity-item {
        position: relative;
        width: 392px;
        margin: 0 4px 48px 0;
        box-shadow: 2px 1px 2px 0 rgba(0, 0, 0, 0.25);
        border-radius: 10px;
        overflow: hidden;

        &:nth-child(3n) {
            margin-right: 0;
        }

        .activity-title {
            width: 100%;
            height: 38px;
            background-color: #ff9600;
            color: #fff;
            line-height: 38px;
            font-size: 18px;
            font-weight: 700;
            text-indent: 21px;
        }

        .activity-ycj {
            position: absolute;
            top: 0;
            right: 20px;
        }

        .activity-countdown {
            width: 100%;
            height: 62px;
            background-color: #fdfdfd;
            line-height: 62px;
            font-size: 14px;
            overflow: hidden;
            padding: 0 12px;
        }

        .count-down-day {
            color: #a83333;
        }

        .count-down-time {
            font-weight: bold;
            color: #000;
            display: inline;
            margin-left: 10px;
        }

        .activity-view-detail {
            text-align: center;
            border: #d1d1d1 1px solid;
            border-radius: 5px;
            color: #949496;
            box-shadow: 2px 1px 2px 0 rgba(0, 0, 0, 0.25);
            display: block;
            height: 37px;
            line-height: 37px;
            padding: 0 5px;
            margin-top: 10px;
            cursor: pointer;
        }
    }
}