
//登陆密码
.per_acc {
    background-color: #fff; 
    height: 695px;
    width: 1040px;
    margin: 0 auto;
    padding-top: 35px;
}
.acc_password {
    input {
        width:300px;
    } 
    .progress-content {
        height: 39px;
        position: absolute;
        left: 318px;
        top:-6px;
        width: 150px;
    }
    .progress {
        width:99px;
        line-height: 25px;
        float: left;
    } 
    .active-grade {
        margin: 0 0 0 10px;
        float: left;
        vertical-align: top;
        line-height: 28px;
    }
}

