.qipai-top {
    background: url(../../../images/poker/qipai-bg.jpg) center center;
    position: relative;
    height: 472px;
}

.qipai-top .qipai-top-wrap {
    width: 1200px;
    position: absolute;
    margin: 0 auto;
    height: 100%;
    left: 0;
    right: 0;
}

.idn-top,
.kgame-top {
    position: absolute;
    top: 41px;
    height: 352px;
    width: 306px;
    border-radius: 10px;
    background-position: top center;
    background-repeat: no-repeat;
    background-color: #232323;
    z-index: 3;
}

.idn-top {
    left: 496px;
    background-image: url(../../../images/poker/idnplay.jpg);
}

.kgame-top {
    left: 824px;
    background-image: url(../../../images/poker/kgame.jpg);
}

.idn-top-wrap,
.kgame-top-wrap {
    width: 306px;
    height: 90px;
    position: absolute;
    bottom: 0;
    background: linear-gradient(to bottom, #232323, #080909);
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}

.idn-balance-title,
.kgame-balance-title {
    position: absolute;
    left: 18px;
    bottom: 60px;
    color: gray;
}

.idn-balance-count,
.kgame-balance-count {
    position: absolute;
    left: 18px;
    bottom: 32px;
}

.idn-count,
.kg-count {
    font-family: "Microsoft Yahei";
    font-size: 16px;
    color: #fe7800;
}

.idn-count-ico,
.kgame-count-ico {
    font-family: "Microsoft Yahei";
    font-size: 14px;
    color: #ffffff;
}

#idn-btn,
#kgame-btn {
    color: #ffffff;
    font-size: 14px;
    position: absolute;
    right: 30px;
    bottom: 36px;
    width: 75px;
    height: 22px;
    border-radius: 5px;
    background: linear-gradient(to bottom, #fe7b00, #fe4d00);
    display: inline-block;
    line-height: 22px;
    text-align: center;
    cursor: pointer;
}

.qipai-top .other-top {
    position: absolute;
    top: 81px;
    right: 28px;
    height: 275px;
    width: 118px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    background-color: #000000;
    z-index: 1;
    opacity: 0.54;
    border: 1px solid #000000;
}

.qipai-main {
    background-color: #0c0a13;
    margin-top: -49px;
}

.qipai-main .qipai-caution-wrap {
    position: relative;
    height: 49px;
    width: 1200px;
    margin: 0 auto;
    box-sizing: border-box;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border: 1px solid #000000;    
}

.qipai-main .qipai-caution {
    height: 100%;
    width: 100%;
    background-color: #000000;
    opacity: 0.42;
}

.qipai-main .qipai-caution-wrap span img {
    vertical-align: middle;
    margin-right: 10px;
}

.qipai-main .qipai-caution-wrap span {
    position: absolute;
    bottom: 0;
    height: 49px;
    line-height: 49px;
    font-family: "Microsoft Yahei";
    font-size: 24px;
    color: #fdfdfd;
    margin-left: 20px;
}

.qipai-main .qipai-tabs {
    width: 1200px;
    margin: 0 auto;
}

.qipai-main .qipai-tabs .qipai-tab {
    float: left;
    width: 400px;
    height: 90px;
    line-height: 90px;
    text-align: center;
    background: url(../../../images/poker/qipai-tab-bg.jpg) center center no-repeat;
    cursor: pointer;
}

.qipai-main .qipai-tabs .qipai-tab .qipai-all-icon {
    background: url(../../../images/poker/qipai-tab-all.png) center center no-repeat;
    width: 34px;
    height: 35px;
    vertical-align: middle;
    display: inline-block;
}

.qipai-main .qipai-tabs .qipai-tab .qipai-all-text {
    font-size: 34px;
    margin-left: 10px;
    color: #fdfdff;
    font-family: "Microsoft Yahei";
    vertical-align: middle;
}

.qipai-main .qipai-tabs .qipai-tab:hover,
.qipai-main .qipai-tabs .qipai-tab.active {
    background: linear-gradient(to bottom, #8b37db, #561b91);
}

.qipai-main .qipai-tabs .qipai-tab:hover .qipai-all-icon,
.qipai-main .qipai-tabs .qipai-tab.active .qipai-all-icon {
    background: url(../../../images/poker/qipai-tab-all-active.png) center center no-repeat;
}

.qipai-main .qipai-tabs .qipai-tab .qipai-idn-img {
    display: inline-block;
    background: url(../../../images/poker/idn.png) center center no-repeat;
    width: 100%;
    height: 90px;
    line-height: 90px;
}

.qipai-main .qipai-tabs .qipai-tab:hover .qipai-idn-img,
.qipai-main .qipai-tabs .qipai-tab.active .qipai-idn-img {
    background: url(../../../images/poker/idn-active.png) center center no-repeat;
}

.qipai-main .qipai-tabs .qipai-tab .qipai-kgame-img {
    display: inline-block;
    background: url(../../../images/poker/kgame.png) center center no-repeat;
    width: 100%;
    height: 90px;
    line-height: 90px;
}

.qipai-main .qipai-tabs .qipai-tab:hover .qipai-kgame-img,
.qipai-main .qipai-tabs .qipai-tab.active .qipai-kgame-img {
    background: url(../../../images/poker/kgame-active.png) center center no-repeat;
}

.qipai-main .qipai-lists {
    background: #000000;
    width: 1200px;
    margin: 0 auto;
}

.qipai-main .qipai-lists ul {
    box-sizing: border-box;
    width: 1200px;
    padding: 24px 23px;
    margin: 0;
}

.qipai-main .qipai-lists ul li.qipai-item {
    width: 373px;
    height: 178px;
    float: left;
    position: relative;
}

.qipai-main .qipai-lists ul li.qipai-item:hover img {
    transition: all 0.3s ease;
    opacity: 0.3;
    transform: scale(1.05);
}

.qipai-main .qipai-lists ul li.qipai-item:hover a.play-btn {
    display: inline-block;
}

.qipai-main .qipai-lists ul li.qipai-item:hover .qipai-item-bottom {
    display: none;
}

.qipai-main .qipai-lists ul li.qipai-item a.play-btn {
    display: none;
    position: absolute;
    width: 150px;
    height: 30px;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    text-align: center;
    color: white;
    font-size: 16px;
    background: linear-gradient(to bottom, green, greenyellow);
    line-height: 30px;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.qipai-main .qipai-lists ul li.qipai-item a.play-btn:hover {
    background: linear-gradient(to top, green, greenyellow);
}

.qipai-main .qipai-lists ul li.qipai-item:nth-child(3n-1) {
    margin-left: 16px;
    margin-right: 17px;
}

.qipai-main .qipai-lists ul li.qipai-item .qipai-item-bottom {
    position: absolute;
    height: 36px;
    width: 100%;
    background-color: #000000;
    bottom: 18px;
    opacity: 0.52;
    transition: all 0.3s ease;    
}

.qipai-main .qipai-lists ul li.qipai-item .qipai-item-bottom i.mini-icon {
    background: url(../../../images/poker/mini-idn-logo.png);
    position: absolute;
    left: 5px;
    top: 16px;
    width: 44px;
    height: 7px;
}

.qipai-main .qipai-lists ul li.qipai-item .qipai-item-bottom i.mini-idn-icon {
    background: url(../../../images/poker/mini-idn-logo.png);
}

.qipai-main .qipai-lists ul li.qipai-item .qipai-item-bottom i.mini-kgame-icon {
    background: url(../../../images/poker/mini-kgame-logo.png);
}

.qipai-main .qipai-lists ul li.qipai-item .qipai-item-bottom span.qipai-title {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 60px;
    height: 36px;
    line-height: 36px;
    font-size: 12px;
    color: white;
}

#mc_footer .footer_icon {
    background-color: #0c0a13;
}