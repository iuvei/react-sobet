.lottery-favorite-wrapper {
    width: 90px;
    position: fixed;
    border-radius: 8px;
    background-color: #3a3a3a;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.22);
    transition: all 0.5s ease-in-out;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    overflow: hidden;

    &.hide {
        left: -200px !important;
    }

    .favorite-title-wrapper {
        height: 38px;
        line-height: 38px;
        text-align: center;
        font-size: 12px;
        color: #d3d3d3;
        border-bottom: 1px solid #282828;
    }

    .set-button-wrapper {
        width: 72px;
        height: 24px;
        line-height: 24px;
        margin: 8px auto;
        border-radius: 12px;
        background-color: #5b648d;
        cursor: pointer;
        color: #fff;
        text-align: center;

        &:hover {
            background-color: #444b6e;

            .set-button-icon {
                animation: setRotate 3s infinite linear;
            }
        }

        .set-button-icon {
            display: inline-block;
            vertical-align: middle;
            width: 14px;
            height: 14px;
            margin: 0 4px 4px 0;
            background: url('../../../../images/lottery/new_lottery_common.png') -90px -13px no-repeat;
        }
    }

    @keyframes setRotate {
        0% {
            -webkit-transform: rotate(0);
            transform: rotate(0);
        }

        25% {
            -webkit-transform: rotate(90deg);
            transform: rotate(90deg);
        }

        50% {
            -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
        }

        75% {
            -webkit-transform: rotate(270deg);
            transform: rotate(270deg);
        }

        100% {
            -webkit-transform: rotate(359deg);
            transform: rotate(359deg);
        }
    }

    .menu-close-wrapper {
        height: 34px;
        line-height: 34px;
        text-align: center;
        color: #fff;
        font-size: 14px;
        cursor: pointer;

        &:hover {
            background-color: #444b6e;
            color: #808bc0;

            .menu-close-icon {
                background-position: -40px -67px;
            }
        }
    }

    .menu-close-icon {
        display: inline-block;
        width: 20px;
        height: 20px;
        margin: 0 6px 2px 0;
        background: url('../../../../images/lottery/new_lottery_common.png') -40px -37px no-repeat;
        vertical-align: middle;
    }

    .favorite-title-icon {
        display: inline-block;
        width: 12px;
        height: 18px;
        margin: 0px 4px 0 0;
        background: url('../../../../images/lottery/new_lottery_common.png') -10px -12px no-repeat;
        vertical-align: middle;
    }

    .lottery-favorite-item {
        position: relative;
        height: 46px;
        cursor: pointer;
        color: #fff;
        border-left: 3px solid transparent;
        border-bottom: 1px solid #282828;
        font-size: 12px;
        text-align: left;

        &:hover, &.active {
            background-color: #484848;
            border-left: 3px solid #5d6793;

            .item-countdown {
                color: #fff;
            }
        }

        .item-cn, .item-countdown {
            height: 23px;
            line-height: 23px;
            padding-left: 7px;
        }

        .item-countdown {
            color: #999;
        }

        .item-recommend {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 24px;
            height: 16px;
            background: url('../../../../images/lottery/new_lottery_common.png') -56px -11px no-repeat;
        }
    }
}

.lottery-favorite-show {
    position: fixed;
    top: 50%;
    left: -100px;
    transform: translateY(-50%);
    width: 44px;
    height: 80px;
    padding: 10px 12px;
    text-align: center;
    background-color: #3a3a3a;
    transition: left 0.2s ease-in-out;
    border-radius: 0 8px 8px 0;
    font-size: 14px;
    color: #fff;
    cursor: pointer;
    z-index: 5;

    &.show {
        left: 0;
    }

    &:hover {
        color: #808bc0;

        .favorite-show-icon {
            background-position: -10px -67px;
        }
    }

    .favorite-show-icon {
        display: block;
        width: 20px;
        height: 20px;
        margin-bottom: 5px;
        background: url('../../../../images/lottery/new_lottery_common.png') -10px -37px no-repeat;
    }
}