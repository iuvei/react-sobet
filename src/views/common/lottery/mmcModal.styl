.mmc-modal-wrapper {
    position: absolute;
    top: 114px;
    z-index: 1002;
    // background: #fff;
    left: 50%;
    transform: translateX(-50%);
    width: 800px;

    .modal-top {
        border-radius: 10px;
        overflow: hidden;
    }

    .modal-bottom {
        border-radius: 10px;
        height: 256px;
        background: url('../../../images/lottery/mmc-box.png') no-repeat;
    }

    .modal-bottom-left {
        width: 400px;
        padding: 20px 10px 0 22px;
    }

    .modal-bottom-right {
        width: 400px;
        padding: 30px 65px 20px;

        .total-title {
            text-align: center;
            font-size: 20px;
            color: #ef3b3a;
            font-weight: 400;
            margin: 10px 0;
        }

        .total-list {
            li {
                line-height: 30px;
                border-top: 1px solid #e2e2e2;
                font-size: 14px;
                color: #636363;
                font-weight: 400;

                &:first-child {
                    border-top: none;
                }
            }
        }

        .total-buttons {
            text-align: center;
        }
    }
}