
$modal-forget-icon= #737BF8;
$moder-btn-wd=95px;
absolute-center(){
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, 0);
}
.forgetModal
    color #000  
    .ant-input
        height: 32px
    .ant-steps-item-finish 
        .ant-steps-item-icon
            border-color $modal-forget-icon;
            background-color: #fff;
        .anticon-check
            &:before
                color $modal-forget-icon
        .ant-steps-item-content 
            .ant-steps-item-title
                &:after
                    background-color $modal-forget-icon;        
    .ant-modal-body
        padding-left 60px
        padding-right 60px
        .ant-steps
            font-family: '微软雅黑'
        .ant-steps-item-process
            .ant-steps-item-icon
                background-color $modal-forget-icon
                border-color $modal-forget-icon
            .ant-steps-item-title
                    color rgba(0, 0, 0, 1)
                    font-weight 600
        .ant-steps-item-wait 
            .ant-steps-item-icon 
                background-color #F0F1F5
        .stepsUser
            margin-top: 44px
            margin-left 10px
            color rgba(0,0,0,0.85)
            .btn
                position relative
                margin-top 42px
                .ant-btn
                    width $moder-btn-wd
                    background $modal-forget-icon
                    border-color $modal-forget-icon
                    absolute-center()
            .ant-input
                width 435px 
        .stepFounds
            margin-top: 44px
            margin-left 10px
            color rgba(0,0,0,0.85)
            padding: 0 120px
            .tofind     
                .ant-btn
                    margin: 0 40px 
                .anticon
                    vertical-align text-bottom
                .btn
                    position relative
                    margin-top 42px
                    left 0
                    .ant-btn
                        margin 0
                        width $moder-btn-wd
                        background $modal-forget-icon
                        border-color $modal-forget-icon
                        color #fff
                        absolute-center() 
            .problem 
                p
                    text-align center
                    color #000
                .ant-col-16 
                    absolute-center() 
                    position relative
                .btn
                    margin 0 auto
                    width 200px
                .ant-btn
                    &:nth-child(1)
                        margin  0 5px 0 21px       
                    &:nth-child(2)             
                        margin  0 21px 0 5px
                        background-color  $modal-forget-icon
                        color #fff
            .reproblem
                p
                    text-align center
                    color #000
                .ant-col-16 
                    absolute-center() 
                    position relative    
                .btn
                    position relative
                    margin-top 42px
                    left 0   
                    .ant-btn
                        width $moder-btn-wd
                        background $modal-forget-icon
                        border-color $modal-forget-icon
                        color #fff
                        absolute-center()

        .donefn
            margin-top 34px  
            color #000  
            .donefnproblem
                text-align center
                font-size 14px 
                .success 
                    vertical-align middle;    
                    margin-right 7px 
            .mail
                p
                    text-align center 
                    margin-bottom 0
            .server
                .serverTop
                    width: 200px
                    margin 0 auto
                .serverBom
                    border-top 1px solid #e9e9e9 
                    padding-top 6px
                    h3
                        font-size 16px   
                        color rgba(0,0,0,0.45)  
                    p
                        font-size 12px 
                        color rgba(0,0,0,0.45)  

.ant-steps-item-title
    &:after
        height 2px !important
        background rgb(0,0,0,0.15)            