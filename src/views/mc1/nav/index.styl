    width: 56px;
    background-position: -135px -128px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span.menu-slots-title {
    width: 56px;
    background-position: -188px -128px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span.menu-sport-title {
    width: 40px;
    background-position: -241px -128px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span.menu-poker-title {
    width: 40px;
    background-position: -280px -128px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span.menu-xglhc-title {
