
.global-nav {
    width: 100%;
    height: 65px;
    background-image: -webkit-gradient(linear,left top,left bottom,from(#2b2b2b),to(#1c1c1c));
    background-image: linear-gradient(to bottom,#2b2b2b,#1c1c1c)
}

.global-nav .menu-wrap {
    width: 1200px;
    height: 100%;
    line-height: 65px;
    margin: 0 auto
}

.global-nav .menu-wrap .menu-icon {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    height: 100%
}

.global-nav .menu-wrap .menu-icon .menu-icon-logo {
    margin: 0 auto;
    vertical-align: middle
}

.global-nav .menu-wrap .menu-nav {
    height: 100%
}

.global-nav .menu-wrap .menu-nav .menu-ul {
    height: 100%
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li {
    width: 100px;
    height: 100%;
    text-align: center;
    -webkit-box-sizing: content-box;
    box-sizing: content-box;
    cursor: pointer
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li a {
    display: inline-block;
    width: 100%;
    height: 100%
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i {
    display: block;
    background-image: url(../../../images/all-icon.png);
    background-repeat: no-repeat;
    height: 30px;
    margin: 5px auto 0
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-index-icon {
    width: 31px;
    background-position: 0 -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-lottery-icon {
    width: 30px;
    background-position: -41px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-live-icon {
    width: 36px;
    background-position: -80px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-fish-icon {
    width: 30px;
    background-position: -127px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-slots-icon {
    width: 38px;
    background-position: -167px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-sport-icon {
    width: 30px;
    background-position: -215px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-poker-icon {
    width: 30px;
    background-position: -255px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-xglhc-icon {
    width: 30px;
    background-position: -295px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li i.menu-entertain-icon {
    width: 30px;
    background-position: -335px -93px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span {
    display: block;
    height: 20px;
    margin: 0 auto;
    background-image: url(../../../images/all-icon.png);
    background-repeat: no-repeat
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span.menu-index-title {
    width: 40px;
    background-position: 6px -128px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span.menu-lottery-title {
    width: 40px;
    background-position: -33px -128px
}

.global-nav .menu-wrap .menu-nav .menu-ul .menu-li span.menu-live-title {
    width: 56px;
