.notice-modal-wrapper {
    height: 500px;
    border-radius: 3px;
    color: #fff;
    overflow: hidden;

    .ant-modal-content {
        background: transparent;
    }

    .ant-modal-header {
        padding: 0;
        border-bottom: none;
        background: transparent;
    }

    .ant-modal-close-x {
        width: 45px;
        height: 45px;
        line-height: 45px;
        font-size: 24px;
        color: #ddd;
        font-weight: normal;
    }

    .ant-modal-close-x:hover {
        color: #ffa;
    }

    .notice-title {
        width: 100%;
        height: 45px;
        line-height: 45px;
        color: #fff;
        font-size: 18px;
        border-bottom: 1px solid #181818;
        background-image: linear-gradient(-180deg, #425294 0, #33467d 100%);
        border-radius: 10px 10px 0 0;
    }

    .notice-title-icon {
        width: 18px;
        height: 20px;
        display: inline-block;
        background: url('../../../images/index/icon-speaker.svg') no-repeat;
        margin: 0 10px 0 20px;
        vertical-align: middle;
    }

    .notice-item-content {
        width: 630px;
        height: 455px;
        background: #121b32;
        padding: 10px 40px 0;
    }

    .ant-tabs-vertical.ant-tabs-left > .ant-tabs-bar {
        width: 320px;
        height: 400px;
        background: #1a2542;
        border-right: none;
    }

    .ant-tabs-vertical.ant-tabs-left > .ant-tabs-bar.hide {
        display: none;
    }

    .ant-tabs-vertical.ant-tabs-left > .ant-tabs-bar .ant-tabs-nav-wrap {
        border-bottom: 1px solid #2a344f;
    }

    .ant-tabs-vertical > .ant-tabs-bar .ant-tabs-extra-content {
        background: #1a2542;
        height: 55px;
        line-height: @height;
    }

    .notice-item-content h3 {
        text-align: center;
        line-height: 60px;
        font-size: 18px;
        color: #e6e6e6;
    }

    .notice-item-content .con-type {
        width: 100%;
        height: 28px;
        border-bottom: 1px solid #2a344f;
        font-size: 12px;
        color: #e6e6e6;
    }

    .notice-item-content .news-content {
        max-width: 100%;
        max-height: 290px;
        overflow-y: auto;
        overflow-x: hidden;
        padding-top: 10px;
        padding-right: 3px;
        background: 0 0;
        font-size: 12px;
        line-height: 1.5;
        color: #e6e6e6;
    }

    .notice-item-content .news-content * {
        max-width: 540px!important;
        border: none!important;
        background: 0 0!important;
        color: #e6e6e6!important;
        font-size: 14px!important;
    }

    .ant-modal-body {
        padding: 0;
    }
    .ant-tabs-vertical.ant-tabs-left > .ant-tabs-content {
        padding-left: 0;
        border-left: none;
    }

    .ant-tabs-vertical.ant-tabs-left > .ant-tabs-bar .ant-tabs-tab {
        text-align: left;
        height: 40px;
        line-height: 40px;
        color: #e6e6e6;
        font-size: 12px;
        padding: 0 20px;
        margin: 0;
    }

    .ant-tabs-nav .ant-tabs-tab-active {
        background: rgba(0,0,0,.3);
    }

    .ant-tabs-extra-content .page-detail {
        margin: 0 8px;
        color: #a3a3a3;
        font-size: 12px;
    }

    .ant-tabs-extra-content .page-prev,
    .ant-tabs-extra-content .page-next {
        display: inline-block;
        width: 21px;
        height: 21px;
        line-height: 21px;
        background: #121212;
        border-radius: 50%;
        vertical-align: middle;
        color: #fff;
        text-align: center;
        cursor: pointer;
    }

    .ant-tabs-extra-content .page-prev:hover,
    .ant-tabs-extra-content .page-next:hover {
        background: #213057;
    }
}